###################################################################
# STACKORED - GLOBAL ENVIRONMENT CONFIGURATION
###################################################################


###################################################################
# TRAEFIK SETTINGS
###################################################################
# Global domain suffix for all services
DEFAULT_TLD_SUFFIX=stackored.loc

# Global SSL Toggle
TRAEFIK_ENABLE_SSL=true

# Auto-redirect HTTP to HTTPS (only works if SSL enabled)
TRAEFIK_REDIRECT_TO_HTTPS=true

# Let's Encrypt SSL Certificates (only works if SSL enabled AND public domain)
# WARNING: Let's Encrypt does NOT work with .loc, .localhost, or local domains
TRAEFIK_ENABLE_LETSENCRYPT=false
TRAEFIK_EMAIL=admin@stackored.local


###################################################################
# DEFAULT PROJECT SETTINGS (FALLBACK)
###################################################################
DEFAULT_PHP_VERSION=8.2
DEFAULT_WEBSERVER=nginx
DEFAULT_DOCUMENT_ROOT=public


###################################################################
# REVERSE PROXY
###################################################################
TRAEFIK_URL=traefik


###################################################################
# DATABASES
###################################################################

# MySQL
MYSQL_ENABLE=true
MYSQL_VERSION=8.0
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=stackored
MYSQL_USER=stackored
MYSQL_PASSWORD=stackored

# MariaDB
MARIADB_ENABLE=true
MARIADB_VERSION=10.6
MARIADB_ROOT_PASSWORD=root
MARIADB_DATABASE=stackored
MARIADB_USER=stackored
MARIADB_PASSWORD=stackored

# PostgreSQL
POSTGRES_ENABLE=true
POSTGRES_VERSION=14
POSTGRES_PASSWORD=root
POSTGRES_DB=stackored
POSTGRES_USER=stackored

# MongoDB
MONGO_ENABLE=true
MONGO_VERSION=5.0
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=root

# Cassandra
CASSANDRA_ENABLE=false
CASSANDRA_VERSION=latest

# Percona
PERCONA_ENABLE=false
PERCONA_VERSION=latest
PERCONA_ROOT_PASSWORD=root
PERCONA_DATABASE=stackored
PERCONA_USER=stackored
PERCONA_PASSWORD=stackored

# CouchDB
COUCHDB_ENABLE=false
COUCHDB_VERSION=latest
COUCHDB_USER=admin
COUCHDB_PASSWORD=admin

# Couchbase
COUCHBASE_ENABLE=false
COUCHBASE_VERSION=latest
COUCHBASE_ADMIN_USER=admin
COUCHBASE_ADMIN_PASSWORD=admin


###################################################################
# CACHING
###################################################################

# Redis
REDIS_ENABLE=true
REDIS_VERSION=7.0
REDIS_PASSWORD=

# Memcached
MEMCACHED_ENABLE=true
MEMCACHED_VERSION=1.6
MEMCACHED_URL=phpmemcachedadmin


###################################################################
# MESSAGE QUEUES
###################################################################

# RabbitMQ
RABBITMQ_ENABLE=true
RABBITMQ_VERSION=3
RABBITMQ_URL=rabbitmq
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin

# NATS
NATS_ENABLE=false
NATS_VERSION=latest

# Kafka
KAFKA_ENABLE=false
KAFKA_VERSION=latest

# Kafbat UI (Kafka Web UI)
KAFBAT_ENABLE=true
KAFBAT_VERSION=latest
KAFBAT_URL=kafbat
KAFBAT_CLUSTER_NAME=stackored-kafka
KAFBAT_KAFKA_BOOTSTRAP=stackored-kafka:9092

# ActiveMQ Classic
ACTIVEMQ_ENABLE=true
ACTIVEMQ_VERSION=latest
ACTIVEMQ_URL=activemq
ACTIVEMQ_ADMIN_USER=admin
ACTIVEMQ_ADMIN_PASSWORD=admin
# Port Configuration (avoiding conflicts)
HOST_PORT_ACTIVEMQ_OPENWIRE=61616
HOST_PORT_ACTIVEMQ_AMQP=5673
HOST_PORT_ACTIVEMQ_STOMP=61613
HOST_PORT_ACTIVEMQ_MQTT=1883
HOST_PORT_ACTIVEMQ_WS=61614
HOST_PORT_ACTIVEMQ_UI=8161


###################################################################
# SEARCH & ANALYTICS
###################################################################

# Elasticsearch
ELASTICSEARCH_ENABLE=true
ELASTICSEARCH_VERSION=8.11.3

# Kibana
KIBANA_ENABLE=true
KIBANA_VERSION=8.11.3
KIBANA_URL=kibana

# Solr
SOLR_ENABLE=false
SOLR_VERSION=latest

# Meilisearch
MEILISEARCH_ENABLE=true
MEILISEARCH_VERSION=latest
MEILISEARCH_URL=meilisearch
MEILISEARCH_MASTER_KEY=stackored-master-key-change-me

# Logstash
LOGSTASH_ENABLE=false
LOGSTASH_VERSION=8.11.3


###################################################################
# MONITORING & OBSERVABILITY
###################################################################

# SonarQube
SONARQUBE_ENABLE=true
SONARQUBE_VERSION=latest
SONARQUBE_URL=sonarqube
SONARQUBE_ADMIN_USER=admin
SONARQUBE_ADMIN_PASSWORD=admin

# Grafana
GRAFANA_ENABLE=true
GRAFANA_VERSION=latest
GRAFANA_URL=grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Sentry
SENTRY_ENABLE=true
SENTRY_VERSION=latest
SENTRY_URL=sentry
SENTRY_ADMIN_EMAIL=admin@stackored.local
SENTRY_ADMIN_PASSWORD=admin
SENTRY_SECRET_KEY=stackored-sentry-secret-key-change-me-in-production
SENTRY_DB_PASSWORD=sentry
SENTRY_REDIS_HOST=sentry-redis
SENTRY_REDIS_PORT=6379
SENTRY_POSTGRES_HOST=sentry-postgres
SENTRY_POSTGRES_PORT=5432
SENTRY_DB_NAME=sentry
SENTRY_DB_USER=sentry


###################################################################
# DATABASE ADMIN TOOLS
###################################################################

# Adminer
ADMINER_ENABLE=true
ADMINER_URL=adminer
# Note: Adminer uses database credentials (no separate login)

# PhpMyAdmin
PHPMYADMIN_ENABLE=true
PHPMYADMIN_URL=phpmyadmin
# Login: Use MySQL/MariaDB credentials (root/root or stackored/stackored)

# PhpPgAdmin
PHPPGADMIN_ENABLE=true
PHPPGADMIN_URL=phppgadmin
# Login: Use PostgreSQL credentials (stackored/root)

# PhpMongo
PHPMONGO_ENABLE=true
PHPMONGO_URL=phpmongo
# Login: Use MongoDB credentials (root/root)

# OpCache Status
OPCACHE_ENABLE=true
OPCACHE_URL=opcache


###################################################################
# DEVELOPMENT TOOLS
###################################################################

# MailHog
MAILHOG_ENABLE=true
MAILHOG_VERSION=latest
MAILHOG_URL=mailhog

# Composer
COMPOSER_ENABLE=false
COMPOSER_VERSION=latest

# Ngrok
NGROK_ENABLE=false
NGROK_VERSION=latest
NGROK_AUTHTOKEN=

# Blackfire
BLACKFIRE_ENABLE=false
BLACKFIRE_SERVER_ID=
BLACKFIRE_SERVER_TOKEN=

# Selenium
SELENIUM_ENABLE=false
SELENIUM_VERSION=latest

# Netdata
NETDATA_ENABLE=true
NETDATA_VERSION=latest
NETDATA_URL=netdata


###################################################################
# APPLICATION SERVERS
###################################################################

# Tomcat
TOMCAT_ENABLE=true
TOMCAT_VERSION=latest
TOMCAT_URL=tomcat
TOMCAT_ADMIN_USER=admin
TOMCAT_ADMIN_PASSWORD=admin
HOST_PORT_TOMCAT=8081

# Kong
KONG_ENABLE=true
KONG_VERSION=latest
KONG_URL=kong
KONG_ADMIN_URL=kong-admin


###################################################################
# DOCKER NETWORK
###################################################################
DOCKER_DEFAULT_NETWORK=stackored-net
DOCKER_PRUNE_ON_REBUILD=false
DOCKER_FORCE_RECREATE=true
DOCKER_REMOVE_ORPHANS=true


###################################################################
# HOST SYSTEM MAPPINGS
###################################################################
HOST_USER_ID=1000
HOST_GROUP_ID=1000
HOST_TIMEZONE=Europe/Istanbul


###################################################################
# SECURITY SETTINGS
###################################################################
ALLOW_HTTPD=true
ALLOW_NGINX=true
ALLOWED_PHP_VERSIONS=7.4,8.0,8.1,8.2,8.3,8.4


###################################################################
# PORT MAPPINGS (for services that need custom host ports)
###################################################################
HOST_PORT_POSTGRES=5433
HOST_PORT_PERCONA=3308
HOST_PORT_ADMINER=8082
HOST_PORT_KAFKA=9094
HOST_PORT_KAFKA_EXTERNAL=29094


###################################################################
# STACKORED CLI BEHAVIOR
###################################################################
STACKORED_VERBOSE=false
STACKORED_STRICT=true
STACKORED_SHOW_BANNER=true
STACKORED_DRY_RUN=false
STACKORED_VERSION=1.0.0
STACKORED_GENERATE_LOG=core/generator.log

